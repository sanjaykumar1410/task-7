import os
from PIL import Image

# Configuration
input_folder = "images"       # Folder containing original images
output_folder = "resized"     # Folder to save resized images
new_size = (800, 800)         # Desired image size (width, height)
output_format = "JPEG"        # Output format: "JPEG", "PNG", etc.

# Create output folder if not exists
if not os.path.exists(output_folder):
    os.makedirs(output_folder)

# Loop through all image files in the folder
for filename in os.listdir(input_folder):
    if filename.lower().endswith(('.png', '.jpg', '.jpeg', '.bmp', '.gif')):
        # Construct full path
        img_path = os.path.join(input_folder, filename)
        img = Image.open(img_path)

        # Resize the image
        resized_img = img.resize(new_size)

        # Convert file extension
        base_name = os.path.splitext(filename)[0]
        new_filename = f"{base_name}.{output_format.lower()}"
        save_path = os.path.join(output_folder, new_filename)

        # Save resized image
        resized_img.save(save_path, output_format)

        print(f" Resized and saved: {save_path}")

print("\n All images have been resized successfully!")
